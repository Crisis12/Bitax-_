<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.crisis.bitacora.Vehiculos">
<RelativeLayout
    android:id="@+id/activity_vehiculos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#262626"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/car"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:fontFamily="sans-serif"
            android:textSize="25dp"
            android:text="VehÃ­culos"
            android:textColor="#f2f2f2"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp">

        <TextView
            android:text="Vehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblvehiculo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/spinnerVehiculo" />

        <TextView
            android:text="Kilometraje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblkm"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="75dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp">

            <RadioButton
                android:text="km inicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnkmI"
                android:layout_weight="1"
                android:textColor="#828282"/>

            <RadioButton
                android:text="km final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbtnkmF"
                android:layout_weight="1"
                android:textColor="#828282"
                android:layout_marginLeft="40dp"/>
        </RadioGroup>

        <TextView
            android:text="km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblMotivos"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="160dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etxtMotivos"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="150dp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="300dp"
        android:background="#262626"
        android:elevation="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp">

        <TextView
            android:text="Gasolinera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblgas"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/spinnerGas" />

        <TextView
            android:text="Carga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblCarga"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="75dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etxtCarga"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="70dp"/>

        <TextView
            android:text="km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblKmCarga"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etxtkmCarga"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="110dp"/>
        <TextView
            android:text="$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblgasto"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="165dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/etxtgasto"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="155dp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/error"
            android:id="@+id/btncancelar"
            android:layout_marginLeft="100dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/success"
            android:id="@+id/aceptar" />
    </FrameLayout>

</RelativeLayout>
</ScrollView>