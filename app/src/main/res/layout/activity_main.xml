<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.crisis.bitacora.Main">

    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/btn_asistencia2"
        android:id="@+id/btnAsistencia"
        android:layout_gravity="top|center"
        android:layout_width="220dp"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_vehiculo2"
        android:layout_marginTop="20dp"
        android:id="@+id/btnVehiculo"
        android:layout_width="210dp"
        android:layout_below="@+id/btnAsistencia"
        android:layout_alignStart="@+id/btnAsistencia" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#262626"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:fontFamily="sans-serif"
            android:textSize="25dp"
            android:text="Bitacora"
            android:textColor="#f2f2f2"/>
    </FrameLayout>




</RelativeLayout>
