<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.crisis.bitacora.Main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#17be64"
        android:id="@+id/frameLayout">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/logoblanco"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:background="#d9d9d9">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/botoninfo"
                android:layout_gravity="left"
                android:background="@android:color/transparent"
                android:layout_marginLeft="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/botonsettings"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                />

        </GridLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true">


        <Button
            android:layout_marginTop="50dp"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/boton"
            android:id="@+id/btnAsistencia"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/usuariosblan"
            android:text="PERSONAL"
            android:textSize="25dp"
            android:textColor="#FFFF"/>
        <Button
            android:layout_marginTop="135dp"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:background="@drawable/boton"
            android:id="@+id/btnVehiculo"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/carrob"
            android:text="VEHICULOS"
            android:textSize="25dp"
            android:textColor="#FFFF"/>

    </FrameLayout>


</RelativeLayout>
